<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_golf_reservation_form" model="ir.ui.view">
            <field name="name">golf.reservation.form</field>
            <field name="model">golf.reservation</field>
            <field name="arch" type="xml">
                <form string="Reserva de Instalaciones">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="member_id"/>
                            <field name="reservation_date"/>
                            <field name="facility"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_golf_reservation_list" model="ir.ui.view">
            <field name="name">golf.reservation.list</field>
            <field name="model">golf.reservation</field>
            <field name="arch" type="xml">
                <list string="Reservas">
                    <field name="name"/>
                    <field name="member_id"/>
                    <field name="reservation_date"/>
                    <field name="facility"/>
                </list>
            </field>
        </record>

        <record id="action_golf_reservation" model="ir.actions.act_window">
            <field name="name">Reservas</field>
            <field name="res_model">golf.reservation</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="golf_reservation_menu"
                  name="Reservas"
                  parent="golf_main_menu"
                  sequence="40"
                  action="action_golf_reservation"/>

    </data>
</odoo>
