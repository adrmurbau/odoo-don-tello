<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- VISTA LISTA -->
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="state"/>
                <field name="partner_id"/>
                <field name="property_id"/>
            </list>
        </field>
    </record>

    <!-- VISTA FORMULARIO -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="property_id"/>
                        <field name="state"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                    <footer>
                        <button name="action_accept" type="object" string="Accept" class="btn-primary"/>
                        <button name="action_refuse" type="object" string="Refuse"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACCIÓN -->
    <record id="action_estate_property_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENÚ (Opcional, puedes omitirlo si las ofertas solo se manejan desde la propiedad) -->
    <menuitem id="menu_estate_property_offer"
              name="Offers"
              parent="estate_menu_root"
              action="action_estate_property_offer"/>
</odoo>
