<odoo>
    <data>
        <!-- Busqueda -->
        <record id="view_estate_property_search" model="ir.ui.view">
            <field name="name">estate.property.search</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <search string="Search Properties">
                    <!-- ATAJOS -->
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="expected_price"/>
                    <field name="bedrooms"/>
                    <field name="living_area"/>
                    <field name="facades"/>
                    <field name="property_type_id"/>
                    <field name="tag_ids"/>

                    <separator/>

                    <!-- FILTRO: propiedades disponibles (state = new u offer_received) -->
                    <filter string="Available" name="filter_available"
                            domain="[('state', 'in', ('new', 'offer_received'))]"/>

                    <!-- AGRUPACIÓN por código postal -->
                    <group expand="1" string="Group By">
                        <filter string="Postcode" name="group_by_postcode"
                                context="{'group_by': 'postcode'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vista de Lista (List View) -->
        <record id= "estate_property_action" model="ir.actions.act_window">
            <field name="name">Properties</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_estate_property_search"/>
        </record>

        <!-- Lista -->
        <record id="estate_property_view_tree" model="ir.ui.view">
            <field name="name">estate.property.list</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <list string="Properties">
                    <field name="name"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="bedrooms"/>
                    <field name="date_availability"/>
                    <field name="state"/>
                    <field name="total_area"/>
                    <field name="best_price"/>
                </list>
            </field>
            
        </record>

        <!-- Formulario -->
        <record id="view_estate_property_form" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form string="Estate Property">
                    <header>
                        <field name="active" widget="boolean_toggle"/>
                        <button name="action_sold" type="object" string="Sold" class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="General Information">
                                <group>
                                    <field name="expected_price"/>
                                    <field name="selling_price" readonly="1"/>
                                    <field name="bedrooms"/>
                                    <field name="date_availability"/>
                                    <field name="total_area" readonly="1"/>
                                    <field name="best_price" readonly="1"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>

                                </group>
                            </page>
                            <page string="Optional Info">
                                <group>
                                    <field name="property_type_id"/>
                                    <field name="salesperson_id"/>
                                    <field name="buyer_id"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>


